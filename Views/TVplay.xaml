<UserControl x:Class="WallPoster.Views.TVplay"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" Width="380" FontSize="40" TextAlignment="Center" Margin="10,24,10,10"/>
        <hc:SimpleStackPanel>
            <Button Width="200" Height="30" Click="Button_Click" Content="点击这里" Style="{StaticResource ButtonInfo}"/>
        </hc:SimpleStackPanel>
    </Grid>
    
</UserControl>
